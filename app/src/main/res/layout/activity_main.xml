<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.willy.metu.util.CurrentFragmentType"/>
        <import type="android.view.View"/>
        <variable name="viewModel" type="com.willy.metu.MainViewModel"/>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_toolbar"
                android:background="@color/colorPrimary"
                android:elevation="@dimen/elevation_all"
                android:visibility="@{viewModel.currentFragmentType == CurrentFragmentType.PAIR ? View.GONE : View.VISIBLE}"
                app:navigationIcon="@drawable/toolbar_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:letterSpacing="0.15"
                    android:text="@{viewModel.currentFragmentType.value}"
                    android:textColor="@color/black_3f3a3a"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="@{viewModel.currentFragmentType == CurrentFragmentType.PAIR ? View.GONE : View.VISIBLE}"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="18dp"
                    tools:text="MeTu"
                    tools:visibility="visible" />

            </androidx.appcompat.widget.Toolbar>

                <fragment
                    android:id="@+id/myNavHostFragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:defaultNavHost="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navGraph="@navigation/navigation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
</layout>