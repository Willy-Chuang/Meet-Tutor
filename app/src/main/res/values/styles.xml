<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="CustomChipChoice">@style/CustomChipChoiceStyle</item>
    </style>

    <style name="AppTheme.AppNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ViewDialog">
        <item name="android:windowBackground">#00ffffff</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog" />

    <style name="AddEventDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="calendarDateText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>


    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="LogoTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomChipChoiceStyle" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconVisible">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="chipBackgroundColor">@color/gray_f0f0f0</item>
        <item name="chipIconVisible">true</item>
        <item name="textStartPadding">4dp</item>
        <item name="textEndPadding">4dp</item>
        <item name="android:textAppearance">@style/ChipTextStyleAppearance</item>
    </style>

    <style name="ChipTextStyleAppearance">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
